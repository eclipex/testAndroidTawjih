<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorPrimary"
    tools:context="com.example.silver.designtest.Menu"
    tools:layout_editor_absoluteY="81dp">


    <ImageView
        android:id="@+id/icSetting"
        android:layout_width="125dp"
        android:layout_height="130dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_settings" />

    <TextView
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:text="Parametres"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="@+id/icSetting"
        app:layout_constraintStart_toStartOf="@+id/icSetting"
        app:layout_constraintTop_toBottomOf="@+id/icSetting" />


    <ImageView
        android:id="@+id/icProfil"
        android:layout_width="125dp"
        android:layout_height="132dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="60dp"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_person" />


    <TextView
        android:id="@+id/profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Profil"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="@+id/icProfil"
        app:layout_constraintStart_toStartOf="@+id/icProfil"
        app:layout_constraintTop_toBottomOf="@+id/icProfil" />

    <ImageView
        android:id="@+id/icRech"
        android:layout_width="125dp"
        android:layout_height="136dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="280dp"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_search" />

    <TextView
        android:id="@+id/rech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="116dp"
        android:layout_marginStart="40dp"
        android:text="Recherche"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icRech"
        app:layout_constraintVertical_bias="0.75" />

    <ImageView
        android:id="@+id/icDisc"
        android:layout_width="125dp"
        android:layout_height="134dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="280dp"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icRech"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_power_settings_new" />

    <TextView
        android:id="@+id/disc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rech"
        android:layout_alignBottom="@+id/rech"
        android:layout_marginBottom="116dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/icRech"
        android:text="Deconnexion"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icDisc"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />


</android.support.constraint.ConstraintLayout>
