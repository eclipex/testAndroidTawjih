<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="20dp"
    android:paddingHorizontal="5dp"
    android:background="@drawable/list_background">


    <TextView
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/cap"
        android:layout_alignTop="@+id/score"
        android:drawablePadding="20dp"
        android:drawableRight="@drawable/ic_code"
        android:gravity="center_vertical|right"
        android:padding="5dp"
        android:text="code" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/cap"
        android:drawableLeft="@drawable/ic_score"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="score" />

    <TextView
        android:id="@+id/cap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/section"
        android:drawableLeft="@drawable/ic_dashboard"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="cap" />

    <TextView
        android:id="@+id/section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etablissement"
        android:drawableLeft="@drawable/ic_bac"

        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="section" />

    <TextView
        android:id="@+id/domaine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/filiere"
        android:text="domaine"

        android:drawableLeft="@drawable/ic_maps_and_flags"
        android:gravity="center_vertical"
        android:drawablePadding="20dp"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/filiere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="fililere"

        android:drawableLeft="@drawable/ic_diploma_1"
        android:gravity="center_vertical"
        android:drawablePadding="20dp"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/etablissement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/domaine"
        android:text="etab"

        android:drawableLeft="@drawable/ic_university_1"
        android:gravity="center_vertical"
        android:drawablePadding="20dp"
        android:padding="5dp"/>

</RelativeLayout>