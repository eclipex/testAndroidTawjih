<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_active="false">

        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="26dp"/>
                    <solid android:color="#80ffffff" />
                    <size android:height="45dp" />
                </shape>
            </item>

            <item android:right="15dp" android:top="3dp">
                <bitmap  android:gravity="center_vertical|right" android:src="@drawable/path" />
            </item>
         </layer-list>
    </item>

</selector>