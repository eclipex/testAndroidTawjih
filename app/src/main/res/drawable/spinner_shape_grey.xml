<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_active="false">

        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="5dp"/>
                    <solid android:color="#ededed" />
                </shape>
            </item>
            <item android:right="15dp" android:top="3dp">
                <bitmap android:gravity="center_vertical|right" android:src="@android:drawable/arrow_down_float" />
            </item>
            <item android:left="15dp" android:top="3dp">
                <bitmap android:gravity="center_vertical|left" android:src="@drawable/ic_bacinscr" />
            </item>
         </layer-list>
    </item>

</selector>